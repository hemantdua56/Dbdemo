<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hemant.dbdemo.MainActivity"
    android:background="@drawable/app">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et1"
            android:hint="USER"
            android:textColor="@color/aaaaa"
            android:textColorHint="@color/aaaaa" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et2"
            android:layout_gravity="center_horizontal"
            android:hint="First Name"
            android:textColor="@color/aaaaa"
            android:textColorHint="@color/aaaaa" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et3"
            android:layout_gravity="center_horizontal"
            android:hint="First Name"
            android:textColor="@color/aaaaa"
            android:textColorHint="@color/aaaaa" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et4"
            android:layout_gravity="center_horizontal"
            android:hint="First Name"
            android:textColor="@color/aaaaa"
            android:textColorHint="@color/aaaaa" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et5"
            android:hint="First Name"
            android:textColor="@color/aaaaa"
            android:textColorHint="@color/aaaaa" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:weightSum="1">

            <Button
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:text="Insert"
                android:id="@+id/btinsert" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                android:id="@+id/btupdate" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:id="@+id/btdelete"
                android:layout_weight="0.08" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Load all"
                android:id="@+id/btload"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            android:layout_gravity="center_horizontal" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="220dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="83dp"
                    android:id="@+id/textView"
                    android:textColor="@color/aaaaa" />

            </LinearLayout>
        </ScrollView>


    </LinearLayout>

</RelativeLayout>
